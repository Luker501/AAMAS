pragma solidity ^0.5.0;

import "truffle/Assert.sol";
import "truffle/DeployedAddresses.sol";
import "../contracts/InvestmentManagementData.sol";
import "../contracts/InvestmentManagementLogic.sol";

contract TestInvestmentManagementContracts {
 // The address of the CompanyManagementData contract to be tested
 InvestmentManagementData imd = InvestmentManagementData(DeployedAddresses.InvestmentManagementData());

 // The address of the CompanyManagementLogic contract to be tested
 InvestmentManagementLogic iml = InvestmentManagementLogic(DeployedAddresses.InvestmentManagementLogic());

// Testing the companyManagement connections function
function testAreInvestmentManagementContractsConnected() public {	
	 //The expected data address of cml
	 address currentDataAddress = iml.getContractDataAddress();
	Assert.equal(currentDataAddress, address(imd), "InvestmentManagementData Address should be pointed at by the InvestmentManagementLogic contract.");

}

// Testing that the owner of the companyManagementData contract is the logic contract
function testDataContractOwner() public {
  	address currentOwner = imd.getOwner();	
	Assert.equal(currentOwner, address(iml), "Logic contract should be the owner of the CompanyManagementData contract.");

}


}
