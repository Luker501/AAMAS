<script>

$("#butLoadVote").click(function(){
	console.log('butLoadVote');
	//get company name from selection box
	var thisCompanyName = document.getElementById('CompanyName').value.split(" (")[0];
	
	console.log('thisCompanyName: ' + thisCompanyName);
	//get voteNumber form input box
	var thisVoteNumber = document.getElementById('VoteNumber').value;
	console.log('thisVoteNumber: ' + thisVoteNumber);
	send(thisCompanyName,thisVoteNumber);
});

function send(thisCompanyName,thisVoteNumber){
$.ajax({
    url:"LoadVoteResults",
    data: {'CompanyName':thisCompanyName,'VoteNumber':thisVoteNumber},
    type: "POST",
    success: function(result){
	console.log("result from ajax:" + result);
	document.write(result);
    }
  })
	
}

$("#butVote").click(function() {
	console.log('Attempted to move to the voting screen! The variables selected are:');
	var votingCompanyName = document.getElementById('CompanyName').value.split("(")[0].trim();
	console.log('votingCompanyName: ' + votingCompanyName);
	var votingQuestionNum = $(QuestionNum).text().split(" ")[1];
	console.log('votingQuestionNum: ' + votingQuestionNum);
	var votingOptionOne = $(Option1OfVote).text();
	console.log('votingOptionOne: ' + votingOptionOne);
	var votingOptionTwo = $(Option2OfVote).text();
	console.log('votingOptionTwo: ' + votingOptionTwo);

//so lets save all variables in local storage

	window.localStorage.removeItem("votingCompanyName");
	console.log('window.localStorage.removeItem("votingCompanyName"); ' + window.localStorage.getItem("votingCompanyName"));
	window.localStorage.setItem("votingCompanyName",votingCompanyName);
	var saveTest = window.localStorage.getItem("votingCompanyName");
	console.log('votingCompanyName (saveTest): ' + saveTest);
	
	window.localStorage.removeItem("votingOptionOne");
	console.log('window.localStorage.removeItem("votingOptionOne"); ' + window.localStorage.getItem("votingOptionOne"));
	window.localStorage.setItem("votingOptionOne",votingOptionOne);
	var saveTest2 = window.localStorage.getItem("votingOptionOne");
	console.log('votingOptionOne (saveTest): ' + saveTest2);

	window.localStorage.removeItem("votingOptionTwo");
	console.log('window.localStorage.removeItem("votingOptionTwo"); ' + window.localStorage.getItem("votingOptionTwo"));
	window.localStorage.setItem("votingOptionTwo",votingOptionTwo);
	var saveTest3 = window.localStorage.getItem("votingOptionTwo");
	console.log('votingOptionTwo (saveTest): ' + saveTest3);

	window.localStorage.removeItem("votingQuestionNum");
	console.log('window.localStorage.removeItem("votingQuestionNum"); ' + window.localStorage.getItem("votingQuestionNum"));
	window.localStorage.setItem("votingQuestionNum",votingQuestionNum);
	var saveTest4 = window.localStorage.getItem("votingQuestionNum");
	console.log('votingQuestionNum (saveTest): ' + saveTest4);

window.location.replace("Vote");

});

</script>

