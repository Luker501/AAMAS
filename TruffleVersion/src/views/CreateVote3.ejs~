<script>
var companyName = window.localStorage.getItem("companyName");
document.getElementById('CompanyName').value = companyName;
var expiryDate = window.localStorage.getItem("expiryDate");
document.getElementById('example-date-input').value = expiryDate;
var expiryTime = window.localStorage.getItem("expiryTime");
document.getElementById('example-time-input').value = expiryTime;
var documents = window.localStorage.getItem("documents");
$('#DocumentsUploaded').text(documents);
var question = window.localStorage.getItem("question");
document.getElementById('Question').value = question;
var explanation = window.localStorage.getItem("explanation");
document.getElementById('Explanation').value = explanation;
var option1 = window.localStorage.getItem("option1");
document.getElementById('Answer1').value = option1;
var option2 = window.localStorage.getItem("option2");
document.getElementById('Answer2').value = option2;
</script>

<script>
$("#butSubmit").click(function() {
	console.log("In butSubmit: ");
	var thisCompanyName = document.getElementById('CompanyName').value;
	var thisDate = document.getElementById('example-date-input').value;
	var thisTime = document.getElementById('example-time-input').value;
	var thisDocument = $('#DocumentsUploaded').text();
	var thisQuestion = document.getElementById('Question').value;
	var thisExplanation = document.getElementById('Explanation').value;
	var thisOption1 = document.getElementById('Answer1').value;
	var thisOption2 = document.getElementById('Answer2').value;
	console.log("thisCompanyName: " + thisCompanyName);
	console.log("thisDate: " + thisDate);
	console.log("thisTime: " + thisTime);
	console.log("thisDocument: " + thisDocument);
	console.log("thisQuestion: " + thisQuestion);
	console.log("thisOption1: " + thisOption1);
	console.log("thisOption2: " + thisOption2);
	send(thisCompanyName,thisDate,thisTime,thisDocument,thisQuestion,thisExplanation,thisOption1,thisOption2);
	alert("The new vote has been uploaded!");

});

function send(thisCompanyName,thisDate,thisTime,thisDocument,thisQuestion,thisExplanation,thisOption1,thisOption2){
$.ajax({
    url:"CreateNewVote",
    data: {'CompanyName':thisCompanyName,'GivenDate':thisDate,'GivenTime':thisTime,'Documents':thisDocument,'Question':thisQuestion,'Explanation':thisExplanation,'Option1':thisOption1,'Option2':thisOption2},
    type: "POST"
  })
}
</script>

